  {{- if .Values.uploadXml }}
  tests:
    config:
      uploadXml:
        baseUrl: {{ .Values.uploadXml.baseUrl }}
    secrets:
      uploadXmlAwsAccessKeyId: {{ .Values.uploadXml.awsAccessKeyId }}
      uploadXmlAwsSecretAccessKey: {{ .Values.uploadXml.awsSecretAccessKey }}
