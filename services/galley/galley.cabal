name:           galley
version:        0.78.0
synopsis:       Conversations
author:         Wire Swiss GmbH
maintainer:     Wire Swiss GmbH <backend@wire.com>
copyright:      (c) 2017 Wire Swiss GmbH
category:       Network
license:        AGPL-3
license-file:   LICENSE
build-type:     Simple
cabal-version:  >= 1.10

flag static
    Description: Enable static linking
    Default:     False

library
    hs-source-dirs: src

    exposed-modules:
        Galley.API
        Galley.App
        Galley.Options

    other-modules:
        Galley.API.Clients
        Galley.API.Create
        Galley.API.Error
        Galley.API.Internal
        Galley.API.Mapping
        Galley.API.Query
        Galley.API.Update
        Galley.API.Util
        Galley.Data
        Galley.Data.Instances
        Galley.Data.Queries
        Galley.Data.Services
        Galley.Data.Types
        Galley.External
        Galley.Intra.Push
        Galley.Intra.User
        Galley.Validation
        Galley.Types.Clients

    default-language:   Haskell2010

    ghc-options:        -Wall -O2 -fwarn-tabs

    build-depends:
        aeson                   >= 0.11
      , async                   >= 2.0
      , attoparsec              >= 0.10
      , base                    >= 4.6     && < 5
      , bilge                   >= 0.21.1
      , brig-types              >= 0.73.1
      , bytestring              >= 0.9
      , bytestring-conversion   >= 0.2
      , case-insensitive        >= 1.0
      , cassandra-util          >= 0.16.2
      , cereal                  >= 0.4
      , containers              >= 0.5
      , errors                  >= 2.0
      , exceptions              >= 0.4
      , extra                   >= 1.3
      , galley-types            >= 0.65.0
      , gundeck-types           >= 1.35.2
      , HsOpenSSL               >= 0.11
      , HsOpenSSL-x509-system   >= 0.1
      , http-client             >= 0.4
      , http-client-openssl-ext >= 0.1
      , http-types              >= 0.8
      , lens                    >= 4.4
      , lifted-async            >= 0.2
      , lifted-base             >= 0.2
      , metrics-wai             >= 0.4
      , monad-control           >= 0.3
      , mtl                     >= 2.2
      , optparse-applicative    >= 0.10
      , protobuf                >= 0.2
      , retry                   >= 0.5
      , safe                    >= 0.3
      , semigroups              >= 0.12
      , singletons              >= 1.0
      , split                   >= 0.2
      , swagger                 >= 0.1
      , text                    >= 0.11
      , text-format             >= 0.3
      , time                    >= 1.4
      , tinylog                 >= 0.10
      , transformers            >= 0.3
      , transformers-base       >= 0.4
      , types-common            >= 0.16
      , unordered-containers    >= 0.2
      , uri-bytestring          >= 0.2
      , uuid                    >= 1.3
      , vector                  >= 0.10
      , wai                     >= 3.0
      , wai-extra               >= 3.0
      , wai-middleware-gunzip   >= 0.0.2
      , wai-predicates          >= 0.8
      , wai-routing             >= 0.12
      , wai-utilities           >= 0.16
      , warp                    >= 3.0

executable galley
    main-is:          src/Main.hs
    default-language: Haskell2010
    build-depends:
        base
      , galley
      , galley-types
      , HsOpenSSL

    ghc-options:
        -Wall
        -O2
        -fwarn-tabs
        -threaded
        -with-rtsopts=-T
        -with-rtsopts=-N1

    if flag(static)
        ld-options: -static

executable galley-schema
    main-is:            Main.hs
    default-language:   Haskell2010
    ghc-options:        -Wall -fwarn-tabs
    hs-source-dirs:     schema/src
    other-modules:      V20

    build-depends:
        base
      , cassandra-util
      , optparse-applicative
      , raw-strings-qq       >= 1.0
      , text
      , tinylog

    if flag(static)
        ld-options: -static

test-suite galley-integration
    type:               exitcode-stdio-1.0
    default-language:   Haskell2010
    main-is:            Main.hs
    hs-source-dirs:     test/integration
    ghc-options:        -threaded -Wall -O2 -fwarn-tabs

    other-modules:
        API
        API.Util

    build-depends:
        aeson
      , async
      , base
      , base64-bytestring
      , bilge
      , brig-types
      , bytestring
      , bytestring-conversion
      , cereal
      , containers
      , data-default-class
      , data-timeout
      , errors
      , exceptions
      , galley-types
      , gundeck-types
      , HsOpenSSL
      , http-client
      , http-client-openssl-ext
      , http-types
      , lens
      , network
      , protobuf
      , transformers
      , tasty                >= 0.8
      , tasty-cannon         >= 0.3.2
      , tasty-hunit          >= 0.9
      , text
      , tls                  >= 1.3.8
      , time
      , types-common
      , unordered-containers
      , uri-bytestring
      , uuid
      , wai
      , wai-route
      , wai-utilities
      , warp
      , warp-tls             >= 3.2

